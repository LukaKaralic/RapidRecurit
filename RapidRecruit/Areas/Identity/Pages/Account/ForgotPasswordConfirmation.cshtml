@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Email za Resetovanje Lozinke Poslat";
}

<div class="min-h-[60vh] flex flex-col items-center justify-center px-4">
    <div class="max-w-md w-full space-y-8 text-center">
        <!-- Email Icon -->
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
        </div>

        <!-- Title -->
        <h1 class="text-3xl font-bold text-gray-900">
            Proverite Vaš Email
        </h1>

        <!-- Message -->
        <div class="bg-white rounded-lg shadow-sm p-6">
            <p class="text-lg text-gray-600 mb-4">
                Poslali smo vam uputstva za resetovanje lozinke.
            </p>
            <p class="text-sm text-gray-500">
                Ako ne vidite email u vašem sandučetu, proverite spam folder.
            </p>
        </div>

        <!-- Return to Login -->
        <div class="mt-6">
            <a asp-page="./Login"
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Vratite se na Prijavu
            </a>
        </div>
    </div>
</div>