@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Potvrda Email-a";
}

<div class="min-h-[60vh] flex flex-col items-center justify-center px-4">
    <div class="max-w-md w-full space-y-8 text-center">
        <!-- Status Icon - Changes based on success/error -->
        @if (Model.StatusMessage?.StartsWith("Error") ?? false)
        {
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </div>
        }
        else
        {
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>
        }

        <!-- Title -->
        <h1 class="text-3xl font-bold text-gray-900">
            Verifikacija Email-a
        </h1>

        <!-- Status Message -->
        <div class="@(Model.StatusMessage?.StartsWith("Error") ?? false ? "bg-red-50 text-red-800" : "bg-white text-gray-600") rounded-lg shadow-sm p-6">
            <p class="text-lg">
                @Model.StatusMessage
            </p>
        </div>

        <!-- Navigation Button -->
        <div class="mt-6">
            <a asp-page="./Login"
               class="inline-flex items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Nastavite na Prijavu
            </a>
        </div>
    </div>
</div>