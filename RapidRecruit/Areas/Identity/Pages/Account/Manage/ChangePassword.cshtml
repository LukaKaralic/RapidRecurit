@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="space-y-6">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Change Password</h2>
        <p class="mt-1 text-sm text-gray-600">Update your account password to maintain security.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="bg-white shadow rounded-lg">
        <form id="change-password-form" method="post" class="space-y-6 p-6">
            <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-md bg-red-50 text-sm text-red-600" role="alert"></div>

            <div class="space-y-1">
                <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700">Current Password</label>
                <div class="mt-1">
                    <input asp-for="Input.OldPassword"
                           type="password"
                           autocomplete="current-password"
                           aria-required="true"
                           class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                           placeholder="Enter your current password" />
                </div>
                <span asp-validation-for="Input.OldPassword" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700">New Password</label>
                <div class="mt-1">
                    <input asp-for="Input.NewPassword"
                           type="password"
                           autocomplete="new-password"
                           aria-required="true"
                           class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                           placeholder="Enter your new password" />
                </div>
                <span asp-validation-for="Input.NewPassword" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm New Password</label>
                <div class="mt-1">
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           autocomplete="new-password"
                           aria-required="true"
                           class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                           placeholder="Confirm your new password" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div class="flex justify-end pt-4">
                <button type="submit"
                        class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Update Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}