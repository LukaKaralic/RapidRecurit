@model RapidRecruit.Models.JobApplication
@{
    ViewData["Title"] = "Application Details";
}

<div class="max-w-3xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <h1 class="text-3xl font-bold text-gray-900">Application Details</h1>
            <div class="flex space-x-4">
                <a asp-action="Review" asp-route-id="@Model.Id"
                   class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    @(Model.ReviewDescision == null ? "Review Application" : "Update Review")
                </a>
                <a asp-controller="JobPostings" asp-action="Details" asp-route-id="@Model.JobPostingId"
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Back to Job Posting
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white shadow overflow-hidden rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="space-y-6">
                <!-- Application Status -->
                <div class="border-b border-gray-200 pb-4">
                    <h3 class="text-lg font-medium text-gray-900">Application Status</h3>
                    <div class="mt-2">
                        <span class="px-2 py-1 text-sm font-semibold rounded-full
                            @(Model.ReviewDescision == null ? "bg-yellow-100 text-yellow-800" :
                              Model.ReviewDescision == Descision.Up ? "bg-green-100 text-green-800" :
                              "bg-red-100 text-red-800")">
                            @(Model.ReviewDescision == null ? "Pending Review" :
                                Model.ReviewDescision == Descision.Up ? "Accepted" : "Rejected")
                        </span>
                    </div>
                </div>

                <!-- Basic Information -->
                <div>
                    <h3 class="text-lg font-medium text-gray-900">Basic Information</h3>
                    <dl class="mt-2 grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Applicant</dt>
                            <dd class="mt-1 text-sm text-gray-900">@($"{Model.User.FirstName} {Model.User.LastName}")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Email</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.User.UserName</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Job Position</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.JobPosting.Title</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Application Date</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.UpdatedAt.ToString("MMMM dd, yyyy")</dd>
                        </div>
                    </dl>
                </div>

                <!-- Resume -->
                <div>
                    <h3 class="text-lg font-medium text-gray-900">Resume</h3>
                    <div class="mt-2 flex items-center space-x-2">
                        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                        </svg>
                        <a href="/@Model.ResumeFilePath" target="_blank" class="text-sm text-indigo-600 hover:text-indigo-900">
                            @Model.ResumeFileName
                        </a>
                    </div>
                </div>

                <!-- Candidate Note -->
                <div>
                    <h3 class="text-lg font-medium text-gray-900">Candidate's Note</h3>
                    <div class="mt-2 p-4 bg-gray-50 rounded-md">
                        <p class="text-sm text-gray-600">
                            @(string.IsNullOrEmpty(Model.CandidateNote) ? "No note provided" : Model.CandidateNote)
                        </p>
                    </div>
                </div>

                <!-- Reviewer Note -->
                @if (!string.IsNullOrEmpty(Model.ReviewerNote))
                {
                    <div>
                        <h3 class="text-lg font-medium text-gray-900">Reviewer's Note</h3>
                        <div class="mt-2 p-4 bg-gray-50 rounded-md">
                            <p class="text-sm text-gray-600">@Model.ReviewerNote</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Application ID -->
    <div class="mt-6 bg-gray-50 rounded-lg p-4">
        <div class="text-sm text-gray-500">
            <p>Application ID: @Model.Id</p>
        </div>
    </div>
</div>