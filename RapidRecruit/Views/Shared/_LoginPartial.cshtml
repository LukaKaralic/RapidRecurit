@using Microsoft.AspNetCore.Identity
@using RapidRecruit.Models
@inject SignInManager<UserAccount> SignInManager
@inject UserManager<UserAccount> UserManager

<ul class="flex items-center space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a id="manage" class="inline-block px-4 py-2 text-gray-900 hover:text-gray-700" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li>
            <form id="logoutForm" class="inline-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="px-4 py-2 text-gray-900 hover:text-gray-700 bg-transparent border-none cursor-pointer">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="inline-block px-4 py-2 text-gray-900 hover:text-gray-700" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="inline-block px-4 py-2 text-gray-900 hover:text-gray-700" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>