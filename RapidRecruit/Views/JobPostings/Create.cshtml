@model RapidRecruit.Models.JobPosting
@{
    ViewData["Title"] = "Create Job Posting";
}

<div class="max-w-2xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Create Job Posting</h1>
        <p class="mt-2 text-sm text-gray-600">Fill in the details below to create a new job posting.</p>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Create" class="space-y-6 p-6">
            <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-md bg-red-50 text-red-600 text-sm"></div>

            <div class="space-y-1">
                <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="Title" class="text-sm text-red-600"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
                <textarea asp-for="Description" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
                <span asp-validation-for="Description" class="text-sm text-red-600"></span>
            </div>

            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div class="space-y-1">
                    <label asp-for="MinimumSalary" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <input asp-for="MinimumSalary" type="number" class="pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                    </div>
                    <span asp-validation-for="MinimumSalary" class="text-sm text-red-600"></span>
                </div>

                <div class="space-y-1">
                    <label asp-for="MaximumSalary" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <input asp-for="MaximumSalary" type="number" class="pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                    </div>
                    <span asp-validation-for="MaximumSalary" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="space-y-1">
                <label asp-for="Location" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Location" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="Location" class="text-sm text-red-600"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="EndDate" type="date"
                       min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="EndDate" class="text-sm text-red-600"></span>
            </div>

            <div class="flex items-center justify-between pt-4">
                <a asp-action="Index" class="text-sm font-medium text-gray-600 hover:text-gray-900">
                    Back to List
                </a>
                <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Create Job Posting
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}