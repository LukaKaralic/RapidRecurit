@model RapidRecruit.Models.JobPosting
@{
    ViewData["Title"] = "Obriši Oglas za Posao";
}
<div class="max-w-3xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Obriši Oglas za Posao</h1>
                <p class="mt-2 text-base text-red-600">Da li ste sigurni da želite da obrišete ovaj oglas? Ova akcija se ne može poništiti.</p>
            </div>
        </div>
    </div>
    <div class="bg-white shadow overflow-hidden rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="space-y-6">
                <div>
                    <h3 class="text-xl font-medium text-gray-900">@Html.DisplayFor(model => model.Title)</h3>
                    <p class="mt-2 text-gray-600">@Html.DisplayFor(model => model.Description)</p>
                </div>
                <div class="border-t border-gray-200 pt-6">
                    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Raspon Plate</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                $@Html.DisplayFor(model => model.MinimumSalary) - $@Html.DisplayFor(model => model.MaximumSalary)
                            </dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Lokacija</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Location)</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Rok za Prijavu</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.EndDate)</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Datum Kreiranja</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Poslednje Ažuriranje</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-6 flex items-center justify-between">
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Nazad na Listu
        </a>
        <form asp-action="Delete" class="inline-block">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                Potvrdi Brisanje
            </button>
        </form>
    </div>
    <div class="mt-6 bg-gray-50 rounded-lg p-4">
        <div class="text-sm text-gray-500">
            <p>ID Oglasa: @Model?.Id</p>
        </div>
    </div>
</div>